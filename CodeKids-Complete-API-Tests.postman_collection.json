{
	"info": {
		"_postman_id": "codekids-api-complete-tests",
		"name": "CodeKids Complete API Tests",
		"description": "Complete API tests for CodeKids backend authentication endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
